 void keyPressed() {
  if (key=='a') {
    background(#395F32);
    fill(random(150,180),random(33,88), random(130,150),random(180));
    ellipse(random(500),random(500),w,l);
  }
  if (key=='s') {
    background(#935401);
    fill(random(70,100),random(244,255), random(244,255),random(180));
    ellipse(random(500),random(500),w,l);
  }
  if (key=='d') {
    background(#93287A);
    fill(random(144,73),random(100,245),random(10,180),random(140));
    ellipse(random(500),random(500),w,l);
  }
  if(key=='f') {
    background(#FFEB79);
    fill(random(99,110),random(15,28),random(230,255),random(140));
    ellipse(random(500),random(500),w,l);
  }
  }
