float w,l;
PImage img;

void setup() {
  //cool color texture
  //background(img = loadImage("rockband_texture.jpg"));
  //white texture
  //background(img = loadImage("white_texture.jpg"));
  background(0,0,0);
  size(500,500);
  w=random(320,400);
  l=random(100,200);
  
} //end setup 

void draw() {
  rectMode(CENTER);
  noStroke();
}

